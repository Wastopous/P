<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Primer.MainWindow"
        MinHeight="200"
        MinWidth="200"
        Title="Авторизация">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="5 5 5 5">
            <TextBlock Text="Авторизация" HorizontalAlignment="Center" Margin="5 5 5 5 "></TextBlock>
            <TextBox Name="TxtLogin" Width="400" Margin="5 5 5 5" HorizontalAlignment="Center" ></TextBox>
            <TextBox Name="TxtPassword" Width="400" Margin="5 5 5 5" HorizontalAlignment="Center"></TextBox>
            <Button Name="BtnLogin" Content="Войти" HorizontalContentAlignment="Center"  Width="200" HorizontalAlignment="Center" Margin="5 5 5 5" Click="BtnLogin_OnClick"></Button>
        </StackPanel>
    </Grid>
</Window>
